<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity8">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:text="EMERGENCY HELPLINES"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/police"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="270dp"
        android:text="POLICE"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/womenHelpline1"
        android:layout_width="182dp"
        android:layout_height="56dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="320dp"
        android:text="Women Helpline
        (Women In Distress)"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/womenHelpline2"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="390dp"
        android:text="Women Helpline
        (Domestic Abuse )"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/policeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="260dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="100"
        android:textSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/womenHelpline1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="260dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="1091"
        android:textSize="20dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/womenHelpline2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:layout_marginLeft="260dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="181"
        android:textSize="20dp" />


</RelativeLayout>